<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bruins.mysmartusc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".ImportantSettingsActivity"
            android:label="ImportantSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UnimSettingsActivity"
            android:label="UnimSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FiltersOverviewActivity"
            android:label="FiltersOverviewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SendMailActivity"
            android:label="@string/title_activity_send_mail" />

        <activity
            android:name=".ChangeSettingsActivity"
            android:label="ChangeSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ChangeUniEmailsSettingsActivity"
            android:label="ChangeUniEmailsSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ChangeImpEmailsSettingsActivity"
            android:label="ChangeImpEmailsSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ChangeImpKeywordsSettingsActivity"
            android:label="ChangeImpKeywordsSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>
    <service
        android:name="com.example.bruins.mysmartusc"
        android:process=":externalProcess"
        tools:ignore="WrongManifestParent" />
</manifest>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <Button
        android:background="@color/colorEditText"
        android:textColor="@color/pastelGreen"
        android:id="@+id/changeNotificationsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:text="Change Notification Settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeImpKeywordsButton"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".75" />

    <Button
        android:background="@color/colorEditText"
        android:textColor="@color/pastelGreen"
        android:id="@+id/changeImpKeywordsButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:text="Change Important Keywords"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeImpEmailsButton"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".75"
        android:layout_width="0dp"/>

    <Button
        android:background="@color/colorEditText"
        android:textColor="@color/pastelGreen"
        android:id="@+id/changeImpEmailsButton"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:text="Change Important Emails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeImpSubwordsButton"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".75" />

    <Button
        android:background="@color/colorEditText"
        android:textColor="@color/pastelGreen"
        android:id="@+id/changeImpSubwordsButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:text="Change Important Subject Line Keywords"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeFavFlagButton"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".75"
        android:layout_width="0dp"/>

    <Button
        android:background="@color/colorEditText"
        android:textColor="@color/pastelGreen"
        android:id="@+id/changeFavFlagButton"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Change Fav/Flag Keywords"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".75"
        android:layout_width="0dp"/>

</android.support.constraint.ConstraintLayout>
